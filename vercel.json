{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/verify",
      "dest": "/api/verify.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/transaction/(.*)",
      "dest": "/api/transaction.js"
    },
    {
      "src": "/api/stats",
      "dest": "/api/stats.js"
    }
  ]
}